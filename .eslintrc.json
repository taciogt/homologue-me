{
    "env": {
        "browser": true
    },
//    "extends": "eslint:recommended",
    "globals": {
       "require": true
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}